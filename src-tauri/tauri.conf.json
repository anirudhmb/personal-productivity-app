{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "personal-productivity-app",
  "version": "0.1.0",
  "identifier": "com.abelathur.personal-productivity-app",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Personal Productivity App",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
